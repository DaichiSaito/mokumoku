/! Navbar
nav.main-header.navbar.navbar-expand.bg-white.navbar-light.border-bottom
  /! Left navbar links
  ul.navbar-nav
    li.nav-item
      a.nav-link data-widget="pushmenu" href="#"
        i.fa.fa-bars
  ul.navbar-nav.ml-auto.mr-auto
    li.d-inline-block
      = link_to 'もくもくする', new_mypage_mokumoku_path, class: 'nav-link text-white btn btn-primary active'

  /! Right navbar links
  ul.navbar-nav.ml-auto.align-items-center
    /! Messages Dropdown Menu
    li.nav-item.dropdown
      a.nav-link data-toggle="dropdown" href="#" 
        i.fa.fa-comments-o
        span.badge.badge-danger.navbar-badge 3
      .dropdown-menu.dropdown-menu-lg.dropdown-menu-right
        a.dropdown-item href="#" 
          /! Message Start
          .media
            = image_tag 'dist/img/user1-128x128.jpg', class: 'img-size-50 mr-3 img-circle'
            .media-body
              h3.dropdown-item-title
                | Brad Diesel
                span.float-right.text-sm.text-danger
                  i.fa.fa-star
              p.text-sm Call me whenever you can...
              p.text-sm.text-muted
                i.fa.fa-clock-o.mr-1
                | 4 Hours Ago
        /! Message End
        .dropdown-divider
        a.dropdown-item href="#" 
          /! Message Start
          .media
            = image_tag 'dist/img/user8-128x128.jpg', class: 'img-size-50 mr-3 img-circle'
            .media-body
              h3.dropdown-item-title
                | John Pierce
                span.float-right.text-sm.text-muted
                  i.fa.fa-star
              p.text-sm I got your message bro
              p.text-sm.text-muted
                i.fa.fa-clock-o.mr-1
                | 4 Hours Ago
        /! Message End
        .dropdown-divider
        a.dropdown-item href="#" 
          /! Message Start
          .media
            = image_tag 'dist/img/user3-128x128.jpg', class: 'img-size-50 mr-3 img-circle'
            .media-body
              h3.dropdown-item-title
                | Nora Silvester
                span.float-right.text-sm.text-warning
                  i.fa.fa-star
              p.text-sm The subject goes here
              p.text-sm.text-muted
                i.fa.fa-clock-o.mr-1
                | 4 Hours Ago
        /! Message End
        .dropdown-divider
        a.dropdown-item.dropdown-footer href="#"  See All Messages
    /! Notifications Dropdown Menu
    li.nav-item.dropdown
      a.nav-link data-toggle="dropdown" href="#" 
        i.fa.fa-bell-o
        span.badge.badge-warning.navbar-badge 15
      .dropdown-menu.dropdown-menu-lg.dropdown-menu-right
        span.dropdown-header 15 Notifications
        .dropdown-divider
        a.dropdown-item href="#" 
          i.fa.fa-envelope.mr-2
          | 4 new messages
          span.float-right.text-muted.text-sm 3 mins
        .dropdown-divider
        a.dropdown-item href="#" 
          i.fa.fa-users.mr-2
          | 8 friend requests
          span.float-right.text-muted.text-sm 12 hours
        .dropdown-divider
        a.dropdown-item href="#" 
